generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Roles for the academy
enum Role {
  ADMIN
  COACH
  STUDENT
}

// Core user of the system
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  role      Role     @default(STUDENT)
  passwordHash String?
  approved  Boolean  @default(false)
  approvedAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  coachProfile   CoachProfile?
  studentProfile StudentProfile?
  lessonsTaught  Lesson[]        @relation("CoachLessons")
  enrollments    Enrollment[]
  donations      Donation[]
  blogPosts      BlogPost[]
}

// Additional details for coaches
model CoachProfile {
  id          Int    @id @default(autoincrement())
  userId      Int    @unique
  bio         String?
  rating      Int?
  availability String?

  user User @relation(fields: [userId], references: [id])
}

// Additional details for students
model StudentProfile {
  id       Int    @id @default(autoincrement())
  userId   Int    @unique
  level    String? // e.g., Beginner, Intermediate, Advanced
  goals    String?
  coachId  Int?   // Assigned coach

  user User @relation(fields: [userId], references: [id])
}

// Lessons created by coaches
model Lesson {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  scheduledAt DateTime
  duration    Int?     // in minutes
  capacity    Int?     // max students
  location    String?
  status      String   @default("scheduled") // scheduled, cancelled, completed
  coachId     Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  coach       User       @relation("CoachLessons", fields: [coachId], references: [id])
  enrollments Enrollment[]
}

// Many-to-many between users (students) and lessons
model Enrollment {
  id        Int      @id @default(autoincrement())
  userId    Int
  lessonId  Int
  status    String   @default("enrolled") // enrolled, attended, absent, cancelled
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id])
  lesson Lesson @relation(fields: [lessonId], references: [id])

  @@unique([userId, lessonId])
}

// Donations for NGO/charity
model Donation {
  id        Int      @id @default(autoincrement())
  userId    Int
  amount    Decimal  @db.Decimal(10,2)
  message   String?
  projectId Int?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  project FundingProject? @relation(fields: [projectId], references: [id])
}

// Funding projects for the NGO
model FundingProject {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  goalAmount  Decimal  @db.Decimal(10,2)
  raisedAmount Decimal @db.Decimal(10,2) @default(0)
  imageUrl    String?
  status      String   @default("active") // active, completed, archived
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  donations Donation[]
}

// Blog posts
model BlogPost {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique
  content     String
  excerpt     String?
  imageUrl    String?
  published   Boolean  @default(false)
  authorId    Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  author User @relation(fields: [authorId], references: [id])
}

// Store products
model StoreProduct {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  price       Decimal  @db.Decimal(10,2)
  imageUrl    String?
  stock       Int      @default(0)
  category    String?
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  orders      OrderItem[]
}

// Store orders
model Order {
  id          Int      @id @default(autoincrement())
  userId      Int
  total       Decimal  @db.Decimal(10,2)
  status      String   @default("pending") // pending, shipped, delivered, cancelled
  shippingAddress String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  items       OrderItem[]
}

// Order items (many-to-many between orders and products)
model OrderItem {
  id        Int     @id @default(autoincrement())
  orderId   Int
  productId Int
  quantity  Int
  price     Decimal @db.Decimal(10,2)
  
  order   Order        @relation(fields: [orderId], references: [id])
  product StoreProduct @relation(fields: [productId], references: [id])
}

// Tournaments
model Tournament {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  startDate   DateTime
  endDate     DateTime?
  location    String?
  maxPlayers  Int?
  registrationDeadline DateTime?
  status      String   @default("upcoming") // upcoming, ongoing, completed, cancelled
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  participants TournamentParticipant[]
}

// Tournament participants
model TournamentParticipant {
  id           Int      @id @default(autoincrement())
  tournamentId Int
  userId       Int
  placement    Int?
  createdAt    DateTime @default(now())
  
  tournament Tournament @relation(fields: [tournamentId], references: [id])
  
  @@unique([tournamentId, userId])
}

// Notifications
model Notification {
  id        Int      @id @default(autoincrement())
  title     String
  message   String
  targetRole String? // null = all users, or ADMIN/COACH/STUDENT
  sentAt    DateTime @default(now())
  createdBy Int
}

// Site settings
model SiteSetting {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String
  updatedAt DateTime @updatedAt
}

// Media library
model Media {
  id        Int      @id @default(autoincrement())
  filename  String
  url       String
  type      String   // image, video, document
  size      Int
  uploadedBy Int
  createdAt DateTime @default(now())
}

// Coach applications
model CoachApplication {
  id          Int      @id @default(autoincrement())
  name        String
  email       String
  bio         String
  experience  String?
  rating      Int?
  status      String   @default("pending") // pending, approved, rejected
  notes       String?
  createdAt   DateTime @default(now())
  reviewedAt  DateTime?
  reviewedBy  Int?
}

// Activity logs
model ActivityLog {
  id        Int      @id @default(autoincrement())
  userId    Int
  action    String
  details   String?
  createdAt DateTime @default(now())
}
